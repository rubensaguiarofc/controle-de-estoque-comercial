
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "StockItem": {
      "title": "Stock Item",
      "description": "An item in the inventory.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "specifications": { "type": "string" },
        "quantity": { "type": "number" },
        "barcode": { "type": "string" }
      },
      "required": ["id", "name", "specifications", "quantity"]
    },
    "WithdrawalRecord": {
      "title": "Withdrawal Record",
      "description": "A record of a stock withdrawal.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "item": { "$ref": "#/entities/StockItem" },
        "quantity": { "type": "number" },
        "unit": { "type": "string" },
        "requestedBy": { "type": "string" },
        "requestedFor": { "type": "string" }
      },
      "required": ["id", "date", "item", "quantity", "unit", "requestedBy", "requestedFor"]
    },
    "EntryRecord": {
      "title": "Entry Record",
      "description": "A record of a stock entry.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "item": { "$ref": "#/entities/StockItem" },
        "quantity": { "type": "number" },
        "unit": { "type": "string" },
        "addedBy": { "type": "string" }
      },
      "required": ["id", "date", "item", "quantity", "unit", "addedBy"]
    },
    "Tool": {
      "title": "Tool",
      "description": "A tool in the inventory.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "assetId": { "type": "string" }
      },
      "required": ["id", "name", "assetId"]
    },
    "ToolRecord": {
      "title": "Tool Record",
      "description": "A record of a tool checkout/return.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "tool": { "$ref": "#/entities/Tool" },
        "checkoutDate": { "type": "string", "format": "date-time" },
        "checkedOutBy": { "type": "string" },
        "usageLocation": { "type": "string" },
        "checkoutSignature": { "type": "string" },
        "returnDate": { "type": "string", "format": "date-time" },
        "isDamaged": { "type": "boolean" },
        "damageDescription": { "type": "string" },
        "damagePhoto": { "type": "string" },
        "returnSignature": { "type": "string" }
      },
      "required": ["id", "tool", "checkoutDate", "checkedOutBy", "usageLocation", "checkoutSignature"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/stockItems/{itemId}": {
      "schema": {
        "$ref": "#/entities/StockItem"
      },
      "description": "Stores stock items for a user."
    },
    "/users/{userId}/tools/{toolId}": {
      "schema": {
        "$ref": "#/entities/Tool"
      },
      "description": "Stores tools for a user."
    },
    "/users/{userId}/withdrawalHistory/{recordId}": {
      "schema": {
        "$ref": "#/entities/WithdrawalRecord"
      },
      "description": "History of stock withdrawals for a user."
    },
    "/users/{userId}/entryHistory/{recordId}": {
      "schema": {
        "$ref": "#/entities/EntryRecord"
      },
      "description": "History of stock entries for a user."
    },
    "/users/{userId}/toolHistory/{recordId}": {
      "schema": {
        "$ref": "#/entities/ToolRecord"
      },
      "description": "History of tool checkouts and returns for a user."
    }
  }
}
